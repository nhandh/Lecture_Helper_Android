<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context="com.example.nhdo.lecturehelper.AudioRecorder">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:id="@+id/audio_button1"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/audio_button2"
        android:layout_below="@+id/audio_button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/audio_button3"
        android:layout_below="@+id/audio_button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Playing"
        android:id="@+id/audio_button4"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/audio_button3"
        android:layout_alignLeft="@+id/audio_button3"
        android:layout_alignStart="@+id/audio_button3"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/audio_button5"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/audio_button4"
        android:layout_alignLeft="@+id/audio_button4"
        android:layout_alignStart="@+id/audio_button4"
        android:onClick="buttonClicked" />

</RelativeLayout>
